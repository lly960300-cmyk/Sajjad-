            player.dy += 0.8;
            player.y += player.dy;
            if (player.y > 200) { player.y = 200; player.dy = 0; player.jumping = false; }

            // ØªØ­Ø±ÙŠÙƒ Ø§Ù„Ø´ÙŠØ§Ø·ÙŠÙ†
            demons.forEach((d, index) => {
                d.x -= d.speed;
                // Ø§ØµØ·Ø¯Ø§Ù… Ø§Ù„Ø´ÙŠØ·Ø§Ù† Ø¨Ø§Ù„Ù„Ø§Ø¹Ø¨
                if (Math.abs(player.x - d.x) < 30 && Math.abs(player.y - d.y) < 50) {
                    hp -= 0.5;
                    document.getElementById('hp').innerText = Math.ceil(hp);
                }
            });

            if (hp <= 0) { alert("Ø®Ø³Ø±Øª! Ø³ØªØ¨Ø¯Ø£ Ù…Ù† Ø¬Ø¯ÙŠØ¯"); location.reload(); }
            if (demons.length === 0) { level++; document.getElementById('lvl').innerText = level; spawnDemons(); }
        }

        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Ø±Ø³Ù… Ø§Ù„ÙØ§Ø±Ø³ (Ø¨Ø³ÙŠØ· Ø­Ø§Ù„ÙŠØ§Ù‹)
            ctx.fillStyle = player.color;
            ctx.fillRect(player.x, player.y, player.w, player.h);
            ctx.fillStyle = "gold"; // Ø§Ù„Ø³ÙŠÙ
            ctx.fillRect(player.x + 35, player.y + 20, 15, 5);

            // Ø±Ø³Ù… Ø§Ù„Ø´ÙŠØ§Ø·ÙŠÙ†
            ctx.fillStyle = "red";
            demons.forEach(d => { ctx.fillRect(d.x, d.y, d.w, d.h); });

            update();
            requestAnimationFrame(draw);
        }

        // Ø£Ø²Ø±Ø§Ø± Ø§Ù„ØªØ­ÙƒÙ… Ø¨Ø§Ù„Ù„Ù…Ø³
        document.getElementById('leftBtn').ontouchstart = () => player.x -= 20;
        document.getElementById('rightBtn').ontouchstart = () => player.x += 20;
        document.getElementById('jumpBtn').ontouchstart = () => { if(!player.jumping) { player.dy = -15; player.jumping = true; } };
        document.getElementById('attackBtn').ontouchstart = () => {
            demons = demons.filter(d => Math.abs(player.x - d.x) > 60);
        };

        spawnDemons();
        draw();
    </script>
